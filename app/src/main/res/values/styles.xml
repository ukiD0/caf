<resources>

    <style name="Widget.Theme.Champ.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="MainText" parent="">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/text_gray_color</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="HeadText" parent="">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">#3A3A3A</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="ProfileText" parent="">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#3A3A3A</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="ButtonText" parent="">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontWeight">700</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>