                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:hint="Пустое значение"
                android:textColorHint="@color/orange" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/orangeSEND"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:hint="Пустое значение"
                android:textColorHint="@color/orange" />

        </LinearLayout>

        <LinearLayout
            android:paddingTop="20sp"
            android:paddingLeft="24sp"
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rrrr">

            <androidx.appcompat.widget.AppCompatTextView

                style="@style/Hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Package Items" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="8dp"
                style="@style/Hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Weight of items" />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="8dp"
                style="@style/Hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Worth of Items" />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="8dp"
                style="@style/Hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Tracking Number" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="vertical"
            android:paddingLeft="24sp"
            android:layout_marginTop="40dp"
            android:paddingTop="8sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/blue_H1Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charges"
                android:textColor="@color/primary_blue" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Delivery Charges" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Instant delivery" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Tax and Service Charges" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView12"
            style="@style/Hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:hint="Package total"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView13"
            style="@style/orangeSEND"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:hint="Total price"
            android:layout_marginRight="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/line"
            app:layout_constraintBottom_toTopOf="@+id/appCompatTextView12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editPACKAGE"
            style="@style/blueBTN"
            android:layout_width="158dp"
            android:textAllCaps="false"
            android:layout_height="48dp"
            android:background="@drawable/blue_edit"
            android:text="Report"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="65dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView12" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Hint"
            android:textColor="@color/primary_blue"
            android:layout_width="340dp"
            android:layout_height="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:text="Click on  delivered for successful delivery and rate rider or report missing item"
            app:layout_constraintBottom_toTopOf="@+id/editPACKAGE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView12" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/successful"
            style="@style/whiteBTN"
            android:textAllCaps="false"
            android:layout_marginRight="25dp"
            android:layout_width="158dp"
            android:layout_height="48dp"
            android:layout_marginTop="65dp"
            android:background="@drawable/blue_edit2"
            android:text="Successful"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView13" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>