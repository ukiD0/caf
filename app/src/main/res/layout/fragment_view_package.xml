        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sddsdssds"
            style="@style/Hint"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="19 Ademola Alabi close, lagos "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sdsdsdds" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/rrrr"
            style="@style/Hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Origin details"
            android:textColor="@color/asBlack"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="24dp"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView11" />


        <LinearLayout
            android:id="@+id/tesse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            android:paddingTop="8sp"
            android:paddingRight="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rrrr">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/packeg1"
                style="@style/orangeSEND"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:hint="Пустое значение"
                android:textColorHint="@color/orange" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/orangeSEND"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:hint="Пустое значение"
                android:textColorHint="@color/orange" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/orangeSEND"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
